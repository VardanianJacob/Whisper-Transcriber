# API key for Lemonfox Whisper API
WHISPER_API_KEY=your-lemonfox-api-key

# URL of the Lemonfox Whisper API endpoint
WHISPER_API_URL=https://api.lemonfox.ai/v1/audio/transcriptions

# Environment: dev or prod
ENV=dev

# Comma-separated list of allowed Telegram usernames for Mini App access
ALLOWED_USERNAMES=your_username

# Telegram Bot API token (if used)
BOT_TOKEN=your_telegram_bot_token

# JWT secret key for signing tokens
JWT_SECRET_KEY=your-jwt-secret-key

# JWT signing algorithm (default HS256)
JWT_ALGORITHM=HS256

# JWT token expiration in minutes
JWT_EXPIRES_MINUTES=30

# Username for development mode stub (used only if ENV=dev)
DEV_USERNAME=your_dev_username
